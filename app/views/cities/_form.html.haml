=form_for city do |f|
  %div
    =f.label :name
    =f.text_field :name
  %div
    =f.label :country
    =f.text_field :country
  %div
    =f.label :photo_path
    =f.text_field :photo_path, :value => (city.new_record? ? '/assets/cities/.jpg' : city.photo_path)
  %div
    =f.submit :class => 'button'
