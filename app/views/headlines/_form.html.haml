=form_for headline do |f|
  %div
    =f.label :name
    =f.text_field :name
  %div
    =f.label :description
    =f.text_area :description
  %div
    =f.label :photo_path
    =f.text_field :photo_path, :value => (headline.new_record? ? '/assets/headlines/.jpg' : headline.photo_path)
  %div
    =f.submit :class => 'button'
